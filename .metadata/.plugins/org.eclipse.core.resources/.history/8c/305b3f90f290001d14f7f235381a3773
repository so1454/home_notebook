//		System.out.println(array1[9]);
		
		System.out.print("array에 들어있는 짝수는");
		for(int i = 0 ; i<array1.length ; i++) {
			array1[i] = rn.nextInt(100) +1;
			if(array1[i]%2 == 0) {
				System.out.print(array1[i]+ " ");
			}
		}
		System.out.println("입니다.");
		

		
		
		
		
		
		
		
		
		
		
		
		
